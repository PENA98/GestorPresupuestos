<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Categorías disponibles</h3>
        <div class="box-tools">
          <ul class="pagination pagination-sm no-margin pull-right">
            <li><button id="modalActivator-button" data-toggle="modal" data-target="#addcategory" type="button"
                class="btn btn-block btn-success btn-sm">Agregar categoría</button></li>

          </ul>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding">
        <table class="table table-striped">
          <tbody>
            <tr>
              <th style="width: 10px">#</th>
              <th>Nombre</th>

            </tr>
            {{#categoriesList cate}}
            {{/categoriesList}}
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>







<!-- MODAL -->

<!-- line modal -->
<div class="modal fade bd-example-modal-lg" id="addcategory" tabindex="-1" role="dialog" aria-labelledby="modalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
            class="sr-only">Close</span></button>
        <h3 class="modal-title" id="lineModalLabel">Nueva categoría</h3>
      </div>
      <div class="modal-body">

        <!-- content goes here -->
        <form action='/add_category/:{{actualURL}}' method="POST">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="currency">Nombre de la categoría</label>
                <input required="required" type="text" autocomplete="off" class="form-control text-left" id="currency"
                  name="Name">
              </div>
              <!-- /input-group -->
            </div>

            <!-- /.input group -->
          </div>



          <button type="submit" hidden="hidden" id="addAccount-button"></button>

        </form>

      </div>

      <div class="modal-footer">
        <div class="btn-group btn-group-justified" role="group" aria-label="group button">
          <div class="btn-group" role="group">
            <button data-dismiss="modal" type="button" class="btn btn-block btn-danger btn-lg">Cerrar</button>
          </div>
          <div class="btn-group" role="group">
            <button class="btn btn-block btn-success btn-lg" onclick="addAcount()">Guardar</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<!--/MODAL-->