    </div>
  </div>
  {{else}}

  <div class="col-lg-4 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-aqua" onclick="window.location='/transactions';">
      <div class="inner">
        {{#if incomes.length}}
        {{#balance incomes expenses}}
        {{/balance}}

        {{else}}
        <h3>L 0</h3>
        {{/if}}


        <p>Saldo actual</p>
      </div>
      <div class="icon">
        <i class="ion ion-cash"></i>
      </div>
      <a href="/transactions" class="small-box-footer">Mas información <i class="fa fa-arrow-circle-right"></i></a>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-lg-4 col-xs-6">
    <!-- small box -->
    <div class="small-box bg-green" onclick="window.location='/transactions';">
      <div class="inner">
        {{#if incomes.length}}
        {{#incomeTotal incomes}}
        {{/incomeTotal}}

        {{else}}
        <h3>L 0</h3>
        {{/if}}
        <p>Ingresos</p>
      </div>
      <div class="icon">
        <i class="ion ion-arrow-graph-up-right"></i>
      </div>
      <a href="/transactions" class="small-box-footer">Mas información <i class="fa fa-arrow-circle-right"></i></a>
    </div>
  </div>
  <!-- ./col -->
  <div class="col-lg-4 col-xs-12">
    <!-- small box -->
    <div class="small-box bg-yellow" onclick="window.location='/transactions';">
      <div class="inner">
        {{#if expenses.length}}
        {{#expenseTotal expenses}}
        {{/expenseTotal}}
        {{else}}
        <h3>L 0</h3>

        {{/if}}

        <p>Gastos</p>
      </div>
      <div class="icon">
        <i class="ion ion-arrow-graph-down-right"></i>
      </div>
      <a href="/transactions" class="small-box-footer">Mas información <i class="fa fa-arrow-circle-right"></i></a>
    </div>
  </div>
